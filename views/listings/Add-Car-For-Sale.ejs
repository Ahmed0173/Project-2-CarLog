<%- include('../partials/head', { title: "Add Car for Sale" , user: user }) %>

<div class="form-page">
    <h1>Add Your Car for Sale</h1>
    <form action="/cars" method="POST" enctype="multipart/form-data">
        <label for="make">Make:</label>
        <input type="text" id="make" name="make" placeholder="Enter car make" required>

        <label for="model">Model:</label>
        <input type="text" id="model" name="model" placeholder="Enter car model" required>

        <label for="year">Year:</label>
        <input type="number" id="year" name="year" placeholder="Enter car year" required>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" placeholder="Enter car price" required>

        <label for="contactInfo">Contact Information:</label>
        <input type="text" id="contactInfo" name="contactInfo" placeholder="Enter your contact information" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" placeholder="Enter car description, mileage, contact, etc." required></textarea>

        <label for="image">Upload Car Image:</label>
        <input type="file" id="image" name="image" accept="image/*" required>

        <div class="form-actions">
            <button type="submit">Add Car</button>
            <a class="button" href="/cars-for-sale">Cancel</a>
        </div>
    </form>
</div>
</body>
</html>