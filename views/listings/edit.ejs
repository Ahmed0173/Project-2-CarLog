<%- include('../partials/head', { title: "Edit Car Listing" , user: user }) %>

<div class="form-page">
    <h1>Edit Car Listing</h1>
    <form action="/cars/<%= listing._id %>?_method=PUT" method="POST">
        <label for="make">Make:</label>
        <input type="text" id="make" name="make" value="<%= listing.make %>" placeholder="Enter car make" required>

        <label for="model">Model:</label>
        <input type="text" id="model" name="model" value="<%= listing.model %>" placeholder="Enter car model" required>

        <label for="year">Year:</label>
        <input type="number" id="year" name="year" value="<%= listing.year %>" placeholder="Enter car year" required>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= listing.price %>" placeholder="Enter car price" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" placeholder="Enter car description, mileage, contact, etc."><%= listing.description || '' %></textarea>

        <label for="contactInfo">Contact Information:</label>
        <input type="text" id="contactInfo" name="contactInfo" value="<%= listing.contactInfo || '' %>" placeholder="Enter your contact information" required>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="<%= listing.image || '' %>" placeholder="Enter image URL (optional)">

        <div class="form-actions">
            <button type="submit">Update Car</button>
            <a class="button" href="/cars-for-sale">Cancel</a>
        </div>
    </form>
</div>
</body>
</html>